  <script>
    const noBtn = document.getElementById("no");
    const yesBtn = document.getElementById("yes");

    function moveNo() {
      const x = Math.random() * (window.innerWidth - noBtn.offsetWidth);
      const y = Math.random() * (window.innerHeight - noBtn.offsetHeight);
      noBtn.style.left = `${x}px`;
      noBtn.style.top = `${y}px`;
    }

    // HAYIR asla tÄ±klanamaz
    noBtn.addEventListener("mouseover", moveNo);
    noBtn.addEventListener("touchstart", moveNo);

    yesBtn.addEventListener("click", () => {
      // ðŸ“³ Vibration
      if (navigator.vibrate) {
        navigator.vibrate([200, 100, 200, 100, 300]);
      }

      document.body.innerHTML = `
        <h1>HELL YEAH ðŸ”¥ðŸ’£</h1>
        <img src="https://media.giphy.com/media/l0MYt5jPR6QX5pnqM/giphy.gif" />
        <h1>ArtÄ±k sevgiliyiz ðŸ˜ŽðŸ’˜</h1>
      `;

      // Emoji rain
      setInterval(createEmoji, 200);
    });

    function createEmoji() {
      const emoji = document.createElement("div");
      emoji.className = "emoji";
      emoji.innerText = Math.random() > 0.5 ? "ðŸ’£" : "ðŸ”¥";
      emoji.style.left = Math.random() * 100 + "vw";
      document.body.appendChild(emoji);

      if (emoji.innerText === "ðŸ’£") {
        setTimeout(() => explode(emoji), 1800);
      }

      setTimeout(() => emoji.remove(), 2600);
    }

    function explode(emoji) {
      const boom = document.createElement("div");
      boom.className = "boom";
      boom.innerText = "ðŸ’¥";
      boom.style.left = emoji.style.left;
      boom.style.top = "70vh";
      document.body.appendChild(boom);

      // ðŸ“³ small vibrate + screen shake
      if (navigator.vibrate) navigator.vibrate(150);
      document.body.classList.add("shake");
      setTimeout(() => document.body.classList.remove("shake"), 350);

      setTimeout(() => boom.remove(), 600);
    }
  </script>

